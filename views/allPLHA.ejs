<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <title>Sipodha - PLHAs</title>
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">Sipodha</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ms-auto">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/plhas">PLHAs</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/records">Records</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/logout">Logout</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
    <main class="container py-4" style="width: 100%; margin: 0 auto;">
      <h2 class="text-center mb-5">person living with HIV and AIDS</h2>
      <div class="table-responsive">
        <table class="table table-hover">
            <thead>
              <tr>
                <th scope="col" class="pl-4 py-3 text-left text-xs font-bold text-gray-700 uppercase tracking-wider hover-text" style="min-width: 180px;">Name</th>
                <th scope="col" class="px-2 py-3 text-left text-xs font-bold text-gray-700 uppercase tracking-wider hover-text" style="min-width: 150px;">Date of Entry</th>
                <th scope="col" class="px-2 py-3 text-left text-xs font-bold text-red-700 uppercase tracking-wider hover-text" style="min-width: 150px;">Date of Birth</th>
                <th scope="col" class="px-2 py-3 text-left text-xs font-bold text-gray-700 uppercase tracking-wider hover-text" style="min-width: 80px;">Age</th>
                <th scope="col" class="px-2 py-3 text-left text-xs font-bold text-gray-700 uppercase tracking-wider hover-text" style="min-width: 100px;">Gender</th>
                <th scope="col" class="px-2 py-3 text-left text-xs font-bold text-gray-700 uppercase tracking-wider hover-text" style="min-width: 80px;">Education</th>
                <th scope="col" class="px-2 py-3 text-left text-xs font-bold text-gray-700 uppercase tracking-wider hover-text" style="min-width: 200px;">Income</th>
                <th scope="col" class="px-2 py-3 text-left text-xs font-bold text-gray-700 uppercase tracking-wider hover-text" style="min-width: 80px;">Address</th>
                <th scope="col" class="px-2 py-3 text-left text-xs font-bold text-gray-700 uppercase tracking-wider hover-text" style="min-width: 100px;">Risk</th>
                <th scope="col" class="px-2 py-3 text-left text-xs font-bold text-gray-700 uppercase tracking-wider hover-text" style="min-width: 100px;">ARV Medications</th>
                <th scope="col" class="pr-4 py-3 text-left text-xs font-bold text-gray-700 uppercase tracking-wider hover-text" style="min-width: 100px;">Detail Records</th>
            </tr>
            </thead>
            
            <tbody>
                <% dataPLHA.forEach(e => { %>
                <tr>
                    <td><%= e.name %></td>
                    <td><%= e.dateOfEntry.toISOString().slice(0,10) %></td>
                    <td><%= e.dateOfBirth.toISOString().slice(0,10) %></td>
                    <td><%= e.age %></td>
                    <td><%= e.gender %></td>
                    <td><%= e.education %></td>
                    <td><%= e.salaryWithUnit %></td>
                    <td><%= e.address %></td>
                    <td><%= e.risk %></td>
                    <td><%= e.arvMed %></td>
                    <td><a class="btn btn-primary" href="#" role="button" style="margin: 0 auto; width: fit-content;">see details</a></td>
                </tr>
                <% }) %>
            </tbody>
        </table>
      </div>
  </main>
</body>
</html>
