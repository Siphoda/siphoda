<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Records</title>
</head>
<body>
    <h1>Records</h1>
    <br>
    <br>
    <br>
    <p>You can add record <a href="/records/add">here</a></p>
    <br>
    <br>
    <br>
    <table border="1">
        <thead>
            <tr>
                <th>Admin</th>
                <th>Patient</th>
                <th>Services</th>
                <th>Services Date</th>
                <th>Note</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% data.forEach(e => { %>
             <tr>
                <td><%= e.Admin.name %></td>
                <td><%= e.PLHA.name %></td>
                <td><%= e.Service.name %></td>
                <td><%= e.serviceDate.toISOString().slice(0,10) %></td>
                <td><%= e.note %></td>
                <td><a href="/records/<%= e.id %>/delete">Delete</a></td>
             </tr>
            <% }) %>
        </tbody>
    </table>
</body>
</html>